<div>
  <%= flash[:notice] %>
</div>

<main>
    <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">


<%= render 'books/list', books: @books %>

<h2 class="mt-3">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from saved.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
     <p>Title</p>
         <%= f.text_field :title, class:"form-control" %>

     <p>Opinion</p>
       <%= f.text_area :body, class:"form-control" %>
      <p>  </p>
     <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <p></p>
  <% end %>
</div>


<div class="col-md-8 offset-md-1">

<h2>Books</h2>
<table class="table table-hover table-inverse">
  <tr>
    <th>image</th><th>name</th><th></th>
  </tr>

    <% @books.each do |book| %>

  <tr>
    <td>
      <%= link_to user_path(current_user) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
  </tr>
   <% end %>
</table>
    </div>
</div>
</div>

</main>